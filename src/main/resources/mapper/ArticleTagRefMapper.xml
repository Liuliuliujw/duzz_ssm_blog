<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liu.ssmblog.mapper.ArticleTagRefMapper">
    <resultMap id="EntityMap" type="com.liu.ssmblog.entity.ArticleTagRef">
        <result column="article_id" jdbcType="INTEGER" property="articleId"/>
        <result column="tag_id" jdbcType="INTEGER" property="tagId"/>
    </resultMap>

    <sql id="tb">article_tag_ref</sql>

    <insert id="insertArticleTagRefMapper" parameterType="com.liu.ssmblog.entity.ArticleTagRef">
        INSERT INTO
        <include refid="tb"/>
        (article_id, tag_id)
        VALUES
        (#{articleId}, #{tagId})
    </insert>

    <select id="listTagByArticleId" resultMap="EntityMap">
        SELECT tag.*
        FROM tag,
             article_tag_ref
        WHERE article_tag_ref.article_id = #{value}
          AND article_tag_ref.tag_id = tag.tag_id
    </select>

    <select id="countArticleByTagId">
        SELECT
        count(*)
        FROM
        <include refid="tb"/>
        WHERE
        tag_id = #{tagId}
    </select>

    <delete id="deleteArticleTagRefByTagId">
        DELETE FROM
        <include refid="tb"/>
        WHERE
        tag_id = #{tagId}
    </delete>

    <delete id="deleteArticleTagRefByArticleId">
        DELETE FROM
        <include refid="tb"/>
        WHERE
        article_id = #{articleId}
    </delete>

</mapper>